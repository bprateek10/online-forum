%body.bg-dark
  .container
    .card.card-login.mx-auto.mt-3
      .card-header Registration
      .card-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'registration-form'}) do |f|
          .form-group
            = f.label :first_name, 'First Name'
            = f.text_field :first_name, autofocus: true, class: 'form-control', 'aria-describedby': 'emailHelp'
          .form-group
            = f.label :last_name, 'Last Name'
            = f.text_field :last_name, autofocus: true, class: 'form-control', 'aria-describedby': 'emailHelp'
          .form-group
            = f.label :email, 'Email address', for: 'exampleInputEmail1'
            = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', id: 'exampleInputEmail1', 'aria-describedby': 'emailHelp'
          .form-group
            = f.label :password, for: 'exampleInputPassword1'
            = f.password_field :password, autocomplete: 'new-password', id: 'password-field', class: 'form-control'
          .form-group
            = f.label :password_confirmation, for: 'exampleInputPassword1'
            = f.password_field :password_confirmation, autocomplete: 'new-password', id: 'exampleInputPassword1', class: 'form-control'
          .actions
            = f.submit 'Sign up', class: 'btn btn-primary btn-block'
            = link_to "Log in", new_session_path(resource_name), class: 'btn btn-info mt-2 w-100'
  :javascript
    $(".alert" ).fadeOut(5000);
